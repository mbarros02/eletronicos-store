CREATE DATABASE IF NOT EXISTS eletronicos_store;
USE IF NOT EXISTS eletronicos_store;

CREATE TABLE IF NOT EXISTS usuarios(
IDUSUARIO INT PRIMARY KEY AUTO_INCREMENT,
NOME VARCHAR(255) NOT NULL,
CPF CHAR(11) NOT NULL,
EMAIL VARCHAR(50) UNIQUE NOT NULL,
SENHA VARCHAR(255) NOT NULL ,
STATUS TINYINT(1) DEFAULT 1
);

CREATE TABLE IF NOT EXISTS grupo_usuario(
IDGRUPO INT PRIMARY KEY AUTO_INCREMENT,
NOME ENUM ('ADMINISTRADOR', 'ESTOQUISTA')
);

ALTER TABLE usuarios
ADD ID_GRUPO_USUARIO INT NOT NULL;

ALTER TABLE usuarios
ADD FOREIGN KEY (ID_GRUPO_USUARIO)
REFERENCES grupo_usuario(IDGRUPO);