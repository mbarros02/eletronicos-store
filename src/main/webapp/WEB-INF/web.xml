<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>MySQLServlet</servlet-name>
        <servlet-class>com.eletronicosstore.database.Conexao</servlet-class>

        <init-param>
            <param-name>jdbcURL</param-name>
            <param-value>jdbc:mysql://localhost:3306/eletronicos_store?useSSL=false&amp;serverTimezone=UTC</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcUser</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcPassword</param-name>
            <param-value>1234</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>MySQLServlet</servlet-name>
        <url-pattern>/mysql</url-pattern>
    </servlet-mapping>
</web-app>
